<!-- 
    View AddEditNotificationView
    
    Tại sao sử dụng:
    - Hiển thị form để thêm mới hoặc chỉnh sửa thông báo
    - Cho phép người dùng nhập nội dung và chọn người nhận thông báo
    
    Quan hệ với các lớp khác:
    - Data Context: AddEditNotificationViewModel
    - Sử dụng các Converter để chuyển đổi dữ liệu
    
    Chức năng chính:
    - Nhập tiêu đề và nội dung thông báo
    - Chọn loại người nhận (tất cả, lớp học, giáo viên, học sinh)
    - Thiết lập ngày hết hạn (nếu có)
    - Lưu hoặc hủy thay đổi
 -->
<Window x:Class="StudentManagementV1._5.Views.AddEditNotificationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentManagementV1._5.Views"
        xmlns:converters="clr-namespace:StudentManagementV1._5.Converters"
        mc:Ignorable="d"
        Title="{Binding DialogTitle}"
        Height="530" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề hộp thoại -->
        <TextBlock Grid.Row="0" Text="{Binding DialogTitle}" 
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Form nhập liệu -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Tiêu đề thông báo - trường bắt buộc -->
                <TextBlock Text="Title *" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Notification.Title, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,15" Padding="5"/>

                <!-- Nội dung thông báo - trường bắt buộc -->
                <TextBlock Text="Message *" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Notification.Message, UpdateSourceTrigger=PropertyChanged}" 
                         TextWrapping="Wrap" AcceptsReturn="True" 
                         Height="100" VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,15" Padding="5"/>

                <!-- Loại người nhận -->
                <TextBlock Text="Recipient Type *" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding RecipientTypes}"
                          SelectedItem="{Binding SelectedRecipientType}"
                          Margin="0,0,0,15" Padding="5"/>

                <!-- Người nhận cụ thể -->
                <TextBlock Text="Recipient" Margin="0,0,0,5"
                           Visibility="{Binding SelectedRecipientType, Converter={StaticResource StringToVisibilityConverter}, 
                                       ConverterParameter=All}"/>
                <ComboBox ItemsSource="{Binding Recipients}"
                          SelectedItem="{Binding SelectedRecipient}"
                          DisplayMemberPath="Name"
                          Margin="0,0,0,15" Padding="5"
                          Visibility="{Binding SelectedRecipientType, Converter={StaticResource StringToVisibilityConverter}, 
                                      ConverterParameter=All}"/>

                <!-- Ngày hết hạn -->
                <CheckBox Content="Has Expiry Date" 
                          IsChecked="{Binding HasExpiryDate}"
                          Margin="0,0,0,5"/>
                
                <StackPanel Visibility="{Binding HasExpiryDate, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="Expiry Date" Margin="0,5,0,5"/>
                    <DatePicker SelectedDate="{Binding ExpiryDate}" 
                             Margin="0,0,0,15" Padding="5"/>
                </StackPanel>

                <!-- Thông báo lỗi -->
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="Red" 
                           TextWrapping="Wrap"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"
                           Margin="0,0,0,15"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Nút thao tác -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Cancel" Command="{Binding CancelCommand}" 
                    Width="100" Margin="0,0,10,0" Padding="5"/>
            <Button Content="Save" Command="{Binding SaveCommand}" 
                    Width="100" Padding="5"
                    Background="#4CAF50" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>