<!-- 
    View ScheduleManagementView
    
    Tại sao sử dụng:
    - Hiển thị và quản lý lịch học trong hệ thống
    - Cho phép lọc, thêm, chỉnh sửa và xóa lịch học
    
    Quan hệ với các lớp khác:
    - Data Context: ScheduleManagementViewModel
    - Sử dụng các data binding để hiển thị và cập nhật dữ liệu
    
    Chức năng chính:
    - Hiển thị danh sách lịch học theo lớp và ngày trong tuần
    - Lọc lịch học theo lớp học và ngày trong tuần
    - Thêm, chỉnh sửa và xóa lịch học
 -->
<UserControl x:Class="StudentManagementV1._5.Views.ScheduleManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentManagementV1._5.Views"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="20,20,20,10">
            <TextBlock Text="Class Schedule Management" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10"/>
            <TextBlock Text="Create and manage class schedules for students and teachers." 
                       Opacity="0.7"
                       TextWrapping="Wrap"/>
            <Separator Margin="0,15,0,0"/>
        </StackPanel>

        <!-- Filters -->
        <Grid Grid.Row="1" Margin="20,0,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <ComboBox Grid.Column="0" 
                      ItemsSource="{Binding Classes}"
                      SelectedItem="{Binding SelectedClass}"
                      Margin="0,0,10,0"
                      Width="200"
                      HorizontalAlignment="Left">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ClassName}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            
            <ComboBox Grid.Column="1" 
                      ItemsSource="{Binding DaysOfWeek}"
                      SelectedItem="{Binding SelectedDay}"
                      Margin="0,0,10,0"
                      Width="150"/>
            
            <Button Grid.Column="2" 
                    Content="Apply Filters" 
                    Command="{Binding ApplyFiltersCommand}"
                    Margin="0,0,10,0"
                    Padding="10,5"/>
            
            <Button Grid.Column="3" 
                    Content="+ Add Schedule" 
                    Command="{Binding AddScheduleCommand}"
                    Background="#2196F3" 
                    Foreground="White" 
                    Padding="10,5"/>
        </Grid>

        <!-- Schedule Data Grid -->
        <DataGrid Grid.Row="2" 
                  Margin="20,0,20,0"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Schedules}"
                  SelectedItem="{Binding SelectedSchedule}"
                  IsReadOnly="True"
                  GridLinesVisibility="All"
                  AlternatingRowBackground="#F5F5F5"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserResizeRows="False"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  BorderThickness="1"
                  BorderBrush="#E0E0E0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Day" Binding="{Binding DayOfWeek}" Width="80"/>
                <DataGridTextColumn Header="Start Time" Binding="{Binding StartTime, StringFormat=hh\\:mm}" Width="100"/>
                <DataGridTextColumn Header="End Time" Binding="{Binding EndTime, StringFormat=hh\\:mm}" Width="100"/>
                <DataGridTextColumn Header="Class" Binding="{Binding ClassName}" Width="120"/>
                <DataGridTextColumn Header="Subject" Binding="{Binding SubjectName}" Width="150"/>
                <DataGridTextColumn Header="Teacher" Binding="{Binding TeacherName}" Width="150"/>
                <DataGridTextColumn Header="Room" Binding="{Binding Room}" Width="80"/>
                <DataGridTemplateColumn Header="Actions" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Edit" 
                                        Command="{Binding DataContext.EditScheduleCommand, 
                                        RelativeSource={RelativeSource FindAncestor, 
                                        AncestorType={x:Type DataGrid}}}" 
                                        CommandParameter="{Binding}"
                                        Margin="0,0,5,0"
                                        Padding="8,2"/>
                                <Button Content="Delete" 
                                        Command="{Binding DataContext.DeleteScheduleCommand, 
                                        RelativeSource={RelativeSource FindAncestor, 
                                        AncestorType={x:Type DataGrid}}}" 
                                        CommandParameter="{Binding}"
                                        Background="#f44336" 
                                        Foreground="White"
                                        Padding="8,2"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Bottom Button Area -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="20,10,20,20">
            <Button Content="Back to Dashboard" 
                    Command="{Binding NavigateBackCommand}"
                    Padding="10,5"/>
        </StackPanel>
    </Grid>
</UserControl>
