<UserControl x:Class="StudentManagementV1._5.Views.MyCoursesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentManagementV1._5.Views"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Back Button -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="â† Back" 
                    Command="{Binding BackCommand}" 
                    Padding="10,5"
                    Background="#2196F3"
                    Foreground="White"
                    HorizontalAlignment="Left" 
                    Margin="0,0,10,0"/>

            <TextBlock Grid.Column="1" 
                       Text="My Courses" 
                       FontSize="24" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>

            <!-- Search Box -->
            <Grid Grid.Column="2" Width="250">
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Search courses..."
                         Padding="5"
                         VerticalAlignment="Center"/>
                <Button Content="ðŸ”" 
                        Command="{Binding SearchCommand}"
                        HorizontalAlignment="Right" 
                        Background="Transparent"
                        BorderThickness="0"/>
            </Grid>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Filters -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <ComboBox Width="200" 
                          Margin="0,0,10,0"
                          ItemsSource="{Binding Semesters}"
                          SelectedItem="{Binding SelectedSemester}"
                          DisplayMemberPath="SemesterName"
                          SelectedValuePath="SemesterID"
                          ToolTip="Filter by semester"/>
                
                <Button Content="Apply Filters" 
                        Command="{Binding ApplyFiltersCommand}"
                        Padding="10,5"
                        Background="#2196F3"
                        Foreground="White"/>
                
                <Button Content="Clear Filters" 
                        Command="{Binding ClearFiltersCommand}"
                        Padding="10,5"
                        Background="#757575"
                        Foreground="White"
                        Margin="10,0,0,0"/>
            </StackPanel>

            <!-- Course List -->
            <Border Grid.Row="1" 
                    BorderBrush="#e0e0e0" 
                    BorderThickness="1" 
                    CornerRadius="5">
                
                <!-- Loading Indicator -->
                <Grid>
                    <ProgressBar IsIndeterminate="True" 
                                 Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                                 VerticalAlignment="Top"
                                 Height="5"
                                 Margin="0"/>
                    
                    <!-- Scrollable Course List -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Courses}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#e0e0e0" 
                                            BorderThickness="0,0,0,1" 
                                            Padding="15">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding SubjectName}" 
                                                           FontWeight="Bold" 
                                                           FontSize="16"/>
                                                <TextBlock Text="{Binding ClassInfo}" 
                                                           Margin="0,5,0,0" 
                                                           Opacity="0.7"/>
                                                <TextBlock Text="{Binding TeacherName}" 
                                                           Margin="0,5,0,0" 
                                                           Opacity="0.7"/>
                                                <TextBlock Text="{Binding Schedule}" 
                                                           Margin="0,5,0,0" 
                                                           Opacity="0.7"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1" 
                                                        VerticalAlignment="Center" 
                                                        Orientation="Horizontal">
                                                <Button Content="View Details" 
                                                        Command="{Binding DataContext.ViewCourseDetailsCommand, 
                                                            RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                                        CommandParameter="{Binding}"
                                                        Padding="10,5"
                                                        Background="#2196F3"
                                                        Foreground="White"
                                                        Margin="0,0,10,0"/>
                                                <Button Content="View Assignments" 
                                                        Command="{Binding DataContext.ViewCourseAssignmentsCommand, 
                                                            RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                                        CommandParameter="{Binding}"
                                                        Padding="10,5"
                                                        Background="#FF9800"
                                                        Foreground="White"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Empty State -->
                    <TextBlock Text="{Binding EmptyStateMessage}" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Visibility="{Binding IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}"
                               Opacity="0.5"
                               FontSize="16"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
